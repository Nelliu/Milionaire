      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartingMenu">

    <Grid>
        
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        

            

            

                
                <Path x:Name="hexagon" Stroke="DarkBlue" StrokeThickness="1" Fill="DarkBlue" Height="30" Width="250" 
                Loaded="hexagon_Loaded"/>
            

        
    </Grid>
</Page>
